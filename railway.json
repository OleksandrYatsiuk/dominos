{
    "$schema": "https://schema.up.railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "phases": {
                "install": {
                    "dependsOn": [
                        "setup"
                    ],
                    "cmds": [
                        "npm install --legacy-peer-deps"
                    ]
                }
            }
        },
        "buildCommand": "npx nx build backend"
    },
    "deploy": {
        "startCommand": "node dist/apps/backend/main.js"
    }
}